<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >

    <SurfaceView android:id="@+id/image"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_gravity="center"
                 android:layout_weight="1"/>


    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true">

        <View android:id="@+id/strut"
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_centerHorizontal="true"/>

        <Button android:id="@+id/toggle_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_negative"
                android:layout_alignRight="@id/strut"
                android:layout_alignParentLeft="true"/>

        <Button android:id="@+id/toggle_mono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_mono"
                android:layout_alignLeft="@id/strut"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">

        <Button android:id="@+id/placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                />
        <Button android:id="@+id/zoom_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_toRightOf="@id/placeholder"
                />
        <Button android:id="@+id/zoom_plus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_toRightOf="@id/zoom_minus"
                />

    </RelativeLayout>
</RelativeLayout>

